+	int numchips = sizeof(gpio_chips) / sizeof(struct lpc313x_gpio_chip);
+	int i;
+
+	for(i = 0; i < numchips; i++) {
+		gpiochip_add(&gpio_chips[i].chip);
+	}
+}
